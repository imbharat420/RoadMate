{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components*"],
      "@screens/*": ["src/screens/*"],
      "@svg/*": ["src/assets/svg/*"],
      "@img/*": ["src/assets/img/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store/*": ["src/store/*"],
      //not yet
      "@types/*": ["src/types/*"],
      "@config/*": ["src/config/*"],
      "@services/*": ["src/services/*"],
      "@navigation/*": ["src/navigation/*"],
      "@constants/*": ["src/constants/*"],
      "@i18n/*": ["src/i18n/*"],
      "@theme/*": ["src/theme/*"], 
    }
  }
}
 